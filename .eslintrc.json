{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "prettier" // forgot add this
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 8
  },
  "rules": {
    "react/function-component-definition": [
      2,
      { "namedComponents": ["arrow-function", "function-declaration"] }
    ],
    "react/prop-types": "off",
    "import/no-cycle": "off",
    "react/react-in-jsx-scope": "off", // we already imported React without writing import statement
    "linebreak-style": "off" // in window, CRLF, but default is LF
  }
}
